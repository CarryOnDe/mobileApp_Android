<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="132dp">
        <ImageView
                android:layout_width="207dp"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/image" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <TextView
                        android:text="Title"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content" android:id="@+id/title"/>
                <TextView
                        android:text="KM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/distance"/>
            </LinearLayout>
            <TextView
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="89dp" android:id="@+id/description"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>